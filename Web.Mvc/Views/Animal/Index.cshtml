@model IEnumerable<Core.Model.Animal>

@{
    ViewBag.Title = "Lista de Animais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Animais para Adoção</h2>

<p>
    @Html.ActionLink("Novo Animal", "Create",null, new { @class = "btn btn-mini btn-info" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.Name("Espécie")
        </th>
        <th>
            @Html.Name("Raça")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.Name("Data da Entrada")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Especie.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Raca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataEntrada)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-mini btn-default" }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-mini btn-danger" })
        </td>
    </tr>
}

</table>

