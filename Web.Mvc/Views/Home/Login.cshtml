@model Core.Model.Usuario

@{
    ViewBag.Title = "Acesso ao Sistema";
}

<h2>Acesso ao Sistema</h2>
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(a => a.NomeUsuario, htmlAttributes: new { @class = "control-label col-md-2" })                   
                    @Html.TextBoxFor(a => a.NomeUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(a => a.NomeUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(a => a.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.PasswordFor(a => a.Senha, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(a => a.Senha, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div class=" col-md-3">
                    @Html.ActionLink(" Novo Login", "Create", "Usuario")
                </div>
                </div>
            </div>
            }
            @section Scripts{
                @Scripts.Render("~/bundles/jqueryval")
            }

